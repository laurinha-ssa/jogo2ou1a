#include <stdio.h>

int main()
{
    int a,b,c;

    printf("jogador 1 escolha dois ou um: ");
    scanf("%i",&a);

    printf("jogador 2 escolha dois ou um: ");
    scanf("%i",&b);

    printf("jogador 3 escolha dois ou um: ");
    scanf("%i",&c);

        //jogadores devem digitar dois ou um
        while((a<1) || (a>2))
        {
            printf("jogador 1 escolha dois ou um: ");
            scanf("%i",&a);
        }
        while((b<1) || (b>2))
        {
            printf("jogador 2 escolha dois ou um: ");
            scanf("%i",&b);
        }
        while((c<1) || (c>2))
        {
            printf("jogador 3 escolha dois ou um: ");
            scanf("%i",&c);


        }

        //quem ganhou?
        if((a==b) && (c!=a)&& (c!=b) )
        {
            printf("jogador 3 ganhou!!\n");
        }
        else if((a==c) && (b!=a)&& (b!=c))
        {
            printf("jogador 2 ganhou!!\n");
        }
        else if((c==b) && (a!=b)&& (a!=c) )
        {
            printf("jogador 1 ganhou!!\n");
        }
        else if((c==a)||(c==b)||(b==a))
        {
            printf("empate\n");

        }
    return 0;
}
